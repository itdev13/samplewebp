{
  "name": "Xendit Payment Gateway",
  "version": "2.0.0",
  "description": "Accept payments via Xendit payment gateway - Virtual Accounts, E-Wallets, QRIS, Credit Cards, Invoices, and Retail Outlets. Perfect for businesses in Indonesia, Philippines, and Southeast Asia.",
  "icon": "https://xendit.co/favicon.ico",
  "developer": {
    "name": "Your Company Name",
    "email": "support@yourcompany.com",
    "website": "https://yourcompany.com",
    "support_url": "https://yourcompany.com/support"
  },
  "pricing": {
    "model": "subscription",
    "amount": 49,
    "currency": "USD",
    "interval": "month",
    "trial_days": 14,
    "tiers": [
      {
        "name": "Starter",
        "amount": 29,
        "locations": 5,
        "features": ["All payment methods", "Email support"]
      },
      {
        "name": "Professional",
        "amount": 49,
        "locations": 20,
        "features": ["All payment methods", "Priority support", "Advanced analytics"]
      },
      {
        "name": "Enterprise",
        "amount": 99,
        "locations": -1,
        "features": ["All payment methods", "24/7 support", "Custom integration", "Dedicated account manager"]
      }
    ]
  },
  "modules": [
    {
      "type": "payment_gateway",
      "name": "Xendit Payment Gateway",
      "description": "Process payments through Xendit with multiple payment methods",
      "icon": "https://xendit.co/favicon.ico",
      "endpoints": {
        "create": "/api/payments/create",
        "status": "/api/payments/:paymentId",
        "methods": "/api/payments/methods/available",
        "list": "/api/payments",
        "sync": "/api/payments/:paymentId/sync"
      },
      "supportedMethods": [
        {
          "value": "invoice",
          "name": "Payment Invoice",
          "description": "Send payment invoice link via email/SMS",
          "supportedCurrencies": ["IDR", "PHP", "USD"],
          "icon": "üìß"
        },
        {
          "value": "virtual_account",
          "name": "Virtual Account",
          "description": "Bank transfer via virtual account",
          "supportedCurrencies": ["IDR"],
          "supportedBanks": ["BCA", "BNI", "BRI", "MANDIRI", "PERMATA", "BSI", "BJB"],
          "icon": "üè¶"
        },
        {
          "value": "ewallet",
          "name": "E-Wallet",
          "description": "Digital wallet payments",
          "supportedCurrencies": ["IDR", "PHP"],
          "supportedChannels": ["OVO", "DANA", "LINKAJA", "SHOPEEPAY", "GCASH", "PAYMAYA"],
          "icon": "üí≥"
        },
        {
          "value": "qris",
          "name": "QRIS",
          "description": "QR Code Indonesian Standard",
          "supportedCurrencies": ["IDR"],
          "icon": "üì±"
        },
        {
          "value": "retail_outlet",
          "name": "Retail Outlet",
          "description": "Pay at convenience stores",
          "supportedCurrencies": ["IDR"],
          "supportedOutlets": ["ALFAMART", "INDOMARET"],
          "icon": "üè™"
        },
        {
          "value": "credit_card",
          "name": "Credit Card",
          "description": "Credit and debit card payments",
          "supportedCurrencies": ["IDR", "PHP", "USD"],
          "icon": "üí≥"
        }
      ]
    }
  ],
  "oauth": {
    "authorizeUrl": "/oauth/authorize",
    "callbackUrl": "/oauth/callback",
    "tokenUrl": "/oauth/token",
    "refreshUrl": "/oauth/refresh",
    "revokeUrl": "/oauth/revoke",
    "scopes": [
      "locations.read",
      "locations.write",
      "contacts.read",
      "contacts.write",
      "opportunities.read",
      "opportunities.write",
      "payments.write",
      "payments.read"
    ]
  },
  "webhooks": [
    {
      "type": "xendit",
      "url": "/api/webhooks/xendit",
      "description": "Receive payment status updates from Xendit",
      "events": [
        "payment.paid",
        "payment.failed",
        "payment.expired",
        "payment.pending",
        "invoice.paid",
        "invoice.expired",
        "virtual_account.paid",
        "ewallet.paid",
        "qris.paid"
      ]
    }
  ],
  "configuration": {
    "url": "/api/config/:locationId",
    "fields": [
      {
        "name": "xenditApiKey",
        "label": "Xendit API Key",
        "type": "password",
        "required": true,
        "description": "Your Xendit secret API key from https://dashboard.xendit.co/settings/developers#api-keys",
        "placeholder": "xnd_production_...",
        "validation": {
          "minLength": 20,
          "pattern": "^xnd_"
        }
      },
      {
        "name": "xenditWebhookToken",
        "label": "Webhook Verification Token (Optional)",
        "type": "password",
        "required": false,
        "description": "Token for webhook signature verification (recommended for production)",
        "placeholder": "your_webhook_token"
      },
      {
        "name": "enabledPaymentMethods",
        "label": "Enabled Payment Methods",
        "type": "multiselect",
        "required": false,
        "options": [
          { "value": "invoice", "label": "Payment Invoice" },
          { "value": "virtual_account", "label": "Virtual Account" },
          { "value": "ewallet", "label": "E-Wallet" },
          { "value": "qris", "label": "QRIS" },
          { "value": "retail_outlet", "label": "Retail Outlet" },
          { "value": "credit_card", "label": "Credit Card" }
        ],
        "default": ["invoice", "virtual_account", "ewallet"]
      },
      {
        "name": "defaultCurrency",
        "label": "Default Currency",
        "type": "select",
        "required": false,
        "options": [
          { "value": "IDR", "label": "Indonesian Rupiah (IDR)" },
          { "value": "PHP", "label": "Philippine Peso (PHP)" },
          { "value": "USD", "label": "US Dollar (USD)" },
          { "value": "SGD", "label": "Singapore Dollar (SGD)" },
          { "value": "MYR", "label": "Malaysian Ringgit (MYR)" },
          { "value": "THB", "label": "Thai Baht (THB)" }
        ],
        "default": "IDR"
      },
      {
        "name": "settings.invoiceDuration",
        "label": "Invoice Duration (seconds)",
        "type": "number",
        "required": false,
        "description": "How long payment invoices remain valid",
        "default": 86400,
        "min": 3600,
        "max": 604800
      },
      {
        "name": "settings.successRedirectUrl",
        "label": "Success Redirect URL",
        "type": "url",
        "required": false,
        "description": "Where to redirect customers after successful payment",
        "placeholder": "https://yourdomain.com/success"
      },
      {
        "name": "settings.failureRedirectUrl",
        "label": "Failure Redirect URL",
        "type": "url",
        "required": false,
        "description": "Where to redirect customers after failed payment",
        "placeholder": "https://yourdomain.com/failed"
      },
      {
        "name": "settings.sendEmailNotification",
        "label": "Send Email Notifications",
        "type": "boolean",
        "required": false,
        "description": "Send email notifications for payment events",
        "default": true
      }
    ]
  },
  "features": [
    "Multiple payment methods (6+ options)",
    "Real-time payment status updates",
    "Automatic GHL opportunity sync",
    "Multi-currency support",
    "Bank virtual accounts (BCA, BNI, BRI, Mandiri, etc.)",
    "E-wallets (OVO, DANA, LinkAja, ShopeePay, GCash, PayMaya)",
    "QRIS QR code payments",
    "Retail outlet payments (Alfamart, Indomaret)",
    "Payment invoices with expiry",
    "Webhook integration",
    "Secure API key encryption",
    "Transaction history",
    "Payment analytics"
  ],
  "tags": [
